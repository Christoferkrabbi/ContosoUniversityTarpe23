
@model IEnumerable<ContosoUniversity.Models.Course>
@{
    ViewData["Title"] = "Kursused";
}

<h2>Courses</h2>
<p>
    <a asp-action="CreateEdit">Add a New Course</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CourseID)</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Credits)</th>
            <th>available actions</th>       
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
           
            <tr>
                <td>@Html.DisplayFor(modelItem => course.CourseID)</td>
                <td>@Html.DisplayFor(modelItem => course.Title)</td>
                <td>@Html.DisplayFor(modelItem => course.Credits)</td>
              
              
                <td>

                    <a asp-action="DetailsDelete" asp-route-id="@course.CourseID" asp-route-mode="details" class="btn btn-primary">Details</a>
                    <a asp-action="DetailsDelete" asp-route-id="@course.CourseID" asp-route-mode="delete" class=" btn btn-primary">Delete</a>
                    <a asp-action="Edit" asp-route-id="@course.CourseID">Edit</a>                    
                    
                @*     <a asp-action="Clone" asp-route-id="@department.CourseID">Clone</a> *@
                 
                </td>
            </tr>
        }
        @if (Model == null || !Model.Any())
        {
        <p>No courses available.</p>
        }
    </tbody>
</table>

